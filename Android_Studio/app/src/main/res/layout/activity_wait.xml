<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:weightSum="35"
    android:background="#84f"
    android:orientation="vertical">

    <!-- View: 화면 외곽 설정 -->
    <TextView
        android:id="@+id/text_room"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="28dp"
        android:text="대기 방"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32"
        android:weightSum="34"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 게임 화면 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32"
            android:orientation="vertical">
            <!-- 현재 유저 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:background="#fff"
                android:layout_marginBottom="3dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_user1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_user3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_user5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_user7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_user2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_user4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_user6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_user8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="36dp"
                        android:layout_weight="1"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:weightSum="9"
                android:gravity="center"
                android:background="#95f">

                <Button
                    android:id="@+id/button_play"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textSize="24dp"
                    android:visibility="gone"
                    android:text="게임 시작" />

            </LinearLayout>

            <ListView
                android:id="@+id/listView_Chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:background="#fff"
                android:layout_marginBottom="3dp"/>


            <!-- 에딧 텍스트와 버튼-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="9"
                android:background="#fff">
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7" />
                <Button
                    android:id="@+id/button_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="전송" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>